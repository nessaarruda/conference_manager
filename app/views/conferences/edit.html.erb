<nav>
  <%= link_to "Conference Manager Home", '/' %>
  <%= link_to "Conferences", "/conferences" %>
  <%= link_to "Presentations", "/presentations" %>
  <%= link_to "Meeting Rooms", "/meeting_rooms" %>
  <%= link_to "Meetings", "/meetings" %>
</nav>

<h1><small>Update</small> <%= @conference.name %></h1>

<%= form_tag "/conferences/#{@conference.id}", method: :patch do %>
  <%= hidden_field_tag :previous_request, request.referrer %>
  <%= label_tag "Conference name " %>
  <%= text_field_tag :name, @conference.name %><br>
  <%= label_tag :organization %>
  <%= text_field_tag :organization, @conference.organization %><br>
  <%= label_tag "Expected attendees" %>
  <%= number_field_tag :size, @conference.size %><br>
  <%= label_tag "Dates" %>
  <%= date_field_tag :start_date, @conference.start_date.to_date %>
  <%= label_tag " to " %>
  <%= date_field_tag :end_date, @conference.end_date.to_date %><br>
  <%= submit_tag "Update Conference" %>
<% end %>

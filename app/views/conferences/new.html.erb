<h1>New Conference</h1>

<form action='/conferences' method='post'>
  <input type='hidden' name='authenticity_token' value="<%= form_authenticity_token %>">
  <label for='confname'>Conference name: </label>
  <input id='confname' type='text' name='conference[name]'/><br/>
  <label for='org'>Organization: </label>
  <input id='org' type='text' name='conference[organization]'/><br/>
  <label for='size'>Expected attendees: </label>
  <input id='size' type='bigint' name='conference[size]'/><br/>
  <div>
    <label for='start'>Dates: </label>
    <input id='start' type='date' name='conference[start_date]'/>
    <label for='end'> to </label>
    <input id='end' type='date' name='conference[end_date]'/><br/>
  </div>
  <input type='submit' value='Create Conference'/>
</form>
